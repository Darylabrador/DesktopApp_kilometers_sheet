<% include ../includes/head %>

</head>

<body class="bg-darkblue-color h-100">
    <% include ../includes/windowButtons , {backgroundColor: backgroundColor} %>

    <% include ../includes/sidenavAdmin %>

    <div class="main pt-5">

        <div class="bg-white py-3 px-1 mt-5">

            <% include ../includes/messageFlash %>

            <table id="movereasonsTable" class="table table-hover mt-5">
                <thead>
                    <tr>
                        <th scope="col" style="font-size: 15px !important">Raison</th>
                        <th scope="col" style="font-size: 15px !important">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% movereasonsInfo.forEach(info => { %>
                    <tr>
                        <th scope="row" style="font-size: 14px !important"><%= info.label %></th>
                        <td>
                            <a draggable="false" href="/movereasons/update/<%= info.id %>" class=" bg-transparent border-0 mx-0 px-0">
                                <span class="iconify iconify__black mx-1" data-inline="false" data-icon="clarity:pencil-solid" style="color: black;"></span>
                            </a>
                            <a draggable="false" href="/movereasons/delete/<%= info.id %>" class=" bg-transparent border-0 mx-0 px-0">
                                <span class="iconify iconify__red mx-1" data-inline="false" data-icon="fa-solid:trash" style="color: red;"></span>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        
        $('#movereasonsTable').DataTable({
            "language": {
                "sSearch": "Rechercher",
                "infoEmpty": "Aucune donnée disponible",
                "zeroRecords": "Aucun élément n'a été trouvé",
                "paginate": {
                    "first": "Premier",
                    "last": "Dernier",
                    "next": "Suivant",
                    "previous": "Précédent"
                },
            },
            responsive: true,
            pageLength: 5,
        });

        $("#movereasonsTable_filter").parent().addClass(["d-flex", "justify-content-start", "ml-3"]);
        $("#movereasonsTable_filter").addClass(["d-flex", "justify-content-start"]);
        $("#movereasonsTable_info").parent().remove();
        $("#movereasonsTable_length").parent().remove();
    </script>
</body>

</html>