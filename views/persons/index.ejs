<% include ../includes/head %>

</head>

<body class="bg-darkblue-color h-100">
    <% include ../includes/windowButtons , {backgroundColor: backgroundColor} %>

    <% include ../includes/sidenavAdmin %>

    <div class="main pt-5">

        <div class="bg-white py-3 px-1 mt-5">

            <% include ../includes/messageFlash %>

            <h5 class="w-100 mt-5 mb-3 font-weight-bold text-center"> Liste des individus </h5>

            <table id="personsTable" class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col" style="font-size: 15px !important">Nom</th>
                        <th scope="col" style="font-size: 15px !important">Prénom</th>
                        <th scope="col" style="font-size: 15px !important">Fonction</th>
                        <th scope="col" style="font-size: 15px !important">Login</th>
                        <th scope="col" style="font-size: 15px !important">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% personsInfo.forEach(info => { %>
                    <tr>
                        <th scope="row" style="font-size: 14px !important"><%= info.surname %></th>
                        <td style="font-size: 14px !important"><%= info.name %></td>
                        <td style="font-size: 14px !important"><%= info.function %></td>
                        <td style="font-size: 14px !important"><%= info.login %></td>
                        <td>
                            <a draggable="false" href="/persons/update/<%= info.id %>" class=" bg-transparent border-0 mx-0 px-0">
                                <span class="iconify iconify__black mx-1" data-inline="false" data-icon="clarity:pencil-solid" style="color: black;"></span>
                            </a>
                            <a draggable="false" href="/persons/delete/<%= info.id %>" class=" bg-transparent border-0 mx-0 px-0">
                                <span class="iconify iconify__red mx-1" data-inline="false" data-icon="fa-solid:trash" style="color: red;"></span>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        
        $('#personsTable').DataTable({
            "language": {
                "sSearch": "Rechercher",
                "infoEmpty": "Aucune donnée disponible",
                "zeroRecords": "Aucun élément n'a été trouvé",
                "paginate": {
                    "first": "Premier",
                    "last": "Dernier",
                    "next": "Suivant",
                    "previous": "Précédent"
                },
            },
            responsive: true,
            pageLength: 5,
        });

        $("#personsTable_filter").parent().addClass(["d-flex", "justify-content-start", "ml-3"]);
        $("#personsTable_filter").addClass(["d-flex", "justify-content-start"]);
        $("#personsTable_info").parent().remove();
        $("#personsTable_length").parent().remove();
    </script>
</body>

</html>