<% include ../includes/head %>

</head>

<body class="bg-darkblue-color">
    <% include ../includes/windowButtons , {backgroundColor: backgroundColor} %>

    <% if(isAdmin) { %>
        <% include ../includes/sidenavAdmin %>
    <% } else { %>
        <% include ../includes/sidenav %>
    <% } %>

    <div class="main pt-5">
        <div class="pt-5">

            <% include ../includes/messageFlash %>

            <form action="/vehicles/associate/create" method="POST" class="card bg-white mt-3 w-75 mx-auto">

                <h5 class="w-100 mt-4 mb-3 font-weight-bold text-center"> Association d'un véhicule </h5>

                <div class="p-4">
                    <div class="mb-4 mb-2 mr-sm-2">
                        <label class="mb-1 font-weight-bold" style="margin-left: 13px;">Individu</label>
                        <select class="form-control inputBorder inputSelect" name="individuId">
                            <option value="">Choix de l'individu</option>
                            <% personsInfo.forEach(info => { %>
                                <option value="<%=info.id%>"><%= info.surname %> <%= info.name %></option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="mb-2 mb-2 mr-sm-2">
                        <label class="mb-1 font-weight-bold" style="margin-left: 13px;">Véhicule</label>
                        <select class="form-control inputBorder inputSelect" name="vehicleId">
                            <option value="">Choix du véhicule</option>
                            <% vehiclesInfo.forEach(info => { %>
                                <option value="<%=info.id%>"><%= info.model %> <%= info.year %> | <%= info.registrationNumber %> | <%= info.horsepower.label %> </option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="card-footer p-0 d-flex">
                    <a draggable="false" href="/vehicles/associate/liste" class="btn btn-form-color w-50 leftBorder py-2">Annuler</a>
                    <div class="btnDivider"></div>
                    <button type="submit" class="btn btn-form-color w-50 rightBorder py-2">Ajouter</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>