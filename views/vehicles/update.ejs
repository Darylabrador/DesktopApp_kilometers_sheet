<% include ../includes/head %>

</head>

<body class="bg-darkblue-color">
    <% include ../includes/windowButtons , {backgroundColor: backgroundColor} %>

    <% if(isAdmin) { %>
        <% include ../includes/sidenavAdmin %>
    <% } else { %>
        <% include ../includes/sidenav %>
    <% } %>

    <div class="main pt-5">
        <div class="pt-2">

            <% include ../includes/messageFlash %>

            <form action="/vehicles/create" method="POST" class="card bg-white mt-2 w-75 mx-auto">

                <input type="hidden" name="vehiclesId" value="<%=vehiclesInfo.id%>">

                <h5 class="w-100 mt-4 mb-3 font-weight-bold text-center"> Modification d'un véhicule </h5>

                <div class="p-4">
                    <div class="mb-4 mb-2 mr-sm-2">
                        <label class="mb-1 font-weight-bold" style="margin-left: 13px;">Marque</label>
                        <input type="text" class="form-control inputBorder" name="mark" value="<%=vehiclesInfo.mark%>">
                    </div>

                    <div class="mb-4 mb-2 mr-sm-2">
                        <label class="mb-1 font-weight-bold" style="margin-left: 13px;">Modèle</label>
                        <input type="text" class="form-control inputBorder" name="model" value="<%=vehiclesInfo.model%>">
                    </div>

                    <div class="mb-4 mb-2 mr-sm-2">
                        <label class="mb-1 font-weight-bold" style="margin-left: 13px;">Puissance</label>
                        <select class="form-control inputBorder inputSelect" name="horsepower">
                            <% horspowersInfo.forEach( horsepower => { %>
                                <% if (vehiclesInfo.horsepowerId) { %>
                                    <option selected value="<%=horsepower.id%>"><%= horsepower.label %></option>
                                <% } else { %>
                                    <option value="<%=horsepower.id%>"><%= horsepower.label %></option>
                                <% } %>    
                            <% }) %>
                        </select>
                    </div>

                    <div class="mb-4 mb-2 mr-sm-2">
                        <label class="mb-1 font-weight-bold" style="margin-left: 13px;">Son année</label>
                        <input type="number" min="1800" step="1" class="form-control inputBorder" name="year" value="<%=vehiclesInfo.year%>">
                    </div>

                    <div class="mb-2 mb-2 mr-sm-2">
                        <label class="mb-1 font-weight-bold" style="margin-left: 13px;">Immatriculations</label>
                        <input type="text" class="form-control inputBorder" name="registrationNumber" value="<%=vehiclesInfo.registrationNumber%>">
                    </div>

                </div>
                <div class="card-footer p-0 d-flex">
                    <a draggable="false" href="/vehicles" class="btn btn-form-color w-50 leftBorder py-2">Annuler</a>
                    <div class="btnDivider"></div>
                    <button type="submit" class="btn btn-form-color w-50 rightBorder py-2">Ajouter</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>