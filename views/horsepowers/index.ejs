<% include ../includes/head %>

</head>

<body class="bg-darkblue-color h-100">
    <% include ../includes/windowButtons , {backgroundColor: backgroundColor} %>

    <% include ../includes/sidenav %>

    <div class="main pt-5"> 

        <div class="bg-white py-3 px-1 mt-5">

            <% include ../includes/messageFlash %>

            <table id="horsepowersTable" class="table table-hover mt-5">
                <thead>
                    <tr>
                        <th scope="col" style="font-size: 15px !important">Description</th>
                        <th scope="col" style="font-size: 15px !important">Jusqu'à 5 000 km</th>
                        <th scope="col" style="font-size: 15px !important">De 5 001 km à 20 000 km</th>
                        <th scope="col" style="font-size: 15px !important">Au-delà de 20 000 km</th>
                        <th scope="col" style="font-size: 15px !important">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% horsepowersInfo.forEach(info => { %>
                    <tr>
                        <th scope="row"  style="font-size: 14px !important"><%= info.label %></th>
                        <td class="text-center"  style="font-size: 14px !important"><%= info.case1 %></td>
                        <td class="text-center"  style="font-size: 14px !important"><%= info.case2 %></td>
                        <td class="text-center"  style="font-size: 14px !important"><%= info.case3 %></td>
                        <td>
                            <a href="/horsepowers/update/<%= info.id %>" class=" bg-transparent border-0 mx-0 px-0">
                                <span class="iconify iconify__black mx-1" data-inline="false" data-icon="clarity:pencil-solid"
                                    style="color: black;"></span>
                            </a>
                            <a href="/horsepowers/delete/<%= info.id %>" class=" bg-transparent border-0 mx-0 px-0">
                                <span class="iconify iconify__red mx-1" data-inline="false" data-icon="fa-solid:trash"
                                    style="color: red;"></span>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>

        $('#horsepowersTable').DataTable({
                "language": {
                    "sSearch": "Rechercher",
                    "infoEmpty": "Aucune donnée disponible",
                    "zeroRecords": "Aucun élément n'a été trouvé",
                    "paginate": {
                        "first": "Premier",
                        "last": "Dernier",
                        "next": "Suivant",
                        "previous": "Précédent"
                    },
                },
                responsive: true,
                pageLength: 5,
        });

        $("#horsepowersTable_filter").parent().addClass(["d-flex", "justify-content-start", "ml-3"]);
        $("#horsepowersTable_filter").addClass(["d-flex", "justify-content-start"]);
        $("#horsepowersTable_info").parent().remove();
        $("#horsepowersTable_length").parent().remove();
    </script>
</body>

</html>